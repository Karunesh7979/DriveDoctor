<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="392dp"
        android:layout_height="125dp"

        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/idServiceProviderEmail"
            app:layout_constraintStart_toStartOf="@+id/idServiceProviderEmail">

            <ImageView
                android:id="@+id/idserviceproviderimage"
                android:layout_width="95dp"
                android:layout_height="95dp"

                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="imageserviceprovider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ImageContrastCheck"
                tools:srcCompat="@drawable/appicon" />

            <TextView
                android:id="@+id/idServiceProviderEmail"
                android:layout_width="147dp"
                android:layout_height="19dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:gravity="right"
                android:text="TextView"
                android:textColor="#888383"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/idServiceProviderPhoneNumber"
                app:layout_constraintTop_toBottomOf="@+id/idServiceProviderAddress" />

            <TextView
                android:id="@+id/idServiceProviderName"
                android:layout_width="198dp"
                android:layout_height="28dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/id_Myclients_userDeleteIcon"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/idserviceproviderimage"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/id_Myclients_userDeleteIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/reddelete" />

            <TextView
                android:id="@+id/idServiceProviderAddress"
                android:layout_width="254dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.652"
                app:layout_constraintStart_toEndOf="@+id/idserviceproviderimage"
                app:layout_constraintTop_toBottomOf="@+id/idServiceProviderCity" />

            <TextView
                android:id="@+id/idServiceProviderPhoneNumber"
                android:layout_width="104dp"
                android:layout_height="18dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="TextView"
                android:textColor="#888383"
                app:layout_constraintStart_toEndOf="@+id/idserviceproviderimage"
                app:layout_constraintTop_toBottomOf="@+id/idServiceProviderAddress" />

            <TextView
                android:id="@+id/idServiceProviderCity"
                android:layout_width="254dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/idserviceproviderimage"
                app:layout_constraintTop_toBottomOf="@+id/idServiceProviderName" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>