<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardView"
        android:layout_width="369dp"
        android:layout_height="125dp"
        android:layout_margin="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/id_myappointments_name_textView"
            android:layout_width="155dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="Providername"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/id_myappointments_status_textView"
            app:layout_constraintStart_toEndOf="@+id/id_myappointmentImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_myappointments_carDetails_textView"
            android:layout_width="161dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:text="Carbrandmodel"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/id_myappointments_datetime_textView"
            app:layout_constraintStart_toEndOf="@+id/id_myappointmentImageView"
            app:layout_constraintTop_toBottomOf="@+id/id_myappointments_name_textView"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/id_myappointments_datetime_textView"
            android:layout_width="121dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="right"
            android:text="Datetime"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/id_myappointments_platenumber_textView"
            android:layout_width="72dp"
            android:layout_height="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="13dp"
            android:gravity="right"
            android:text="nameplate"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/id_myappointments_datetime_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_myappointments_name_textView"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/id_myappointmentImageView"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/appicon" />

        <TextView
            android:id="@+id/id_myappointments_amount_textView"
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="16dp"
            android:text="TextView"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/id_myappointmentImageView" />

        <TextView
            android:id="@+id/id_myappointments_status_textView"
            android:layout_width="81dp"
            android:layout_height="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:text="TextView"
            android:gravity="right"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>